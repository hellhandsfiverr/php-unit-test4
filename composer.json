{
    "name": "alldigitalrewards/replink-vendor-sdk",
    "type": "library",
    "description": "Replink Vendor SDK",
    "autoload": {
        "psr-4": {
            "AllDigitalRewards\\Vendor\\Replink\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AllDigitalRewards\\Tests\\": "./tests"
        }
    },
    "require": {
        "psr/log": "^1.0",
        "jojihere/monolog-fluent": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=phpcs.xml src",
        "fix-style": "phpcbf -p --standard=phpcs.xml src"
    }
}
